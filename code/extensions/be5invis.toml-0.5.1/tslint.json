{
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "object-literal-key-quotes": [
            true,
            "consistent-as-needed"
        ],
        "no-var-requires": true,
        "member-access": false,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    },
    "linterOptions": {
        "exclude": [
            "dist/**",
            "node_modules/**",
            "*.d.ts"
        ]
    }
}
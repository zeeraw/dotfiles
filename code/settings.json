{
    // Global configuration.
    "window.zoomLevel": 0,
    "editor.rulers": [
        80
    ],

    // File syntax highlighting associations.
    "files.associations": {
        "*.yml": "yaml",
        "*.env": "dotenv",
        "*.env*": "dotenv",
        "*.sql": "sql",
        "*.mysql": "mysql",
        "*.mysql.sql": "mysql",
        "*.pg": "postgres",
        "*.pg.sql": "postgres",
        "*.postgres": "postgres",
        "*.postgres.sql": "postgres",
        "*.cockroach": "postgres",
        "*.cockroach.sql": "postgres"
    },

    // Go configuration using the gopls language server.
    "[go]": {
        "editor.snippetSuggestions": "none", // For use with language server
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true,
        },
        "editor.defaultFormatter": "golang.Go",
    },
    "go.autocompleteUnimportedPackages": false,

    // Configuration for `go build`
    "go.buildOnSave": "off", // For use with language server
    "go.buildTags": "",
    "go.buildFlags": [],

    // Configuration for `golint`
    "go.lintOnSave": "package",
    "go.lintTool": "golint",
    "go.lintFlags": [
        "-min_confidence=0.80"
    ],

    // Configuration for `go vet`
    "go.vetOnSave": "off", // for use with language server
    "go.vetFlags": [

    ],

    // Configuration for `go test`
    "go.coverOnSave": false,
    "go.testOnSave": false,
    "go.coverOnSingleTest": true,
    "go.coverOnTestPackage": true,
    "go.coverOnSingleTestFile": true,

    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.useCodeSnippetsOnFunctionSuggestWithoutType": true,

    "go.goroot": "/usr/local/opt/go/libexec",
    "go.gopath": "/usr/local/go",
    // "go.toolsGopath": "/usr/local/gotools",
    "go.useLanguageServer": true,
    "go.languageServerFlags": [
        "-rpc.trace",
        "-logfile=/Users/philipvieira/gopls.log",
    ],
    "go.languageServerExperimentalFeatures": {
        "format": true,
        "autoComplete": true,
        "diagnostics": true,
        "goToDefinition": true,
        "goToTypeDefinition": true,
        "hover": true,
        "signatureHelp": true,
        "documentSymbols": true,
        "rename": true,
        "findReferences": true,
        "workspaceSymbols": true,
        "documentLink": true,
    },
    "go.editorContextMenuCommands": {
        "toggleTestFile": false,
        "addTags": false,
        "removeTags": false,
        "testAtCursor": false,
        "testFile": false,
        "testPackage": false,
        "generateTestForFunction": false,
        "generateTestForFile": false,
        "generateTestForPackage": false,
        "addImport": false,
        "testCoverage": false,
        "playground": false,
        "fillStruct": false,
        "debugTestAtCursor": false,
    },

    "scss.lint.unknownAtRules": "ignore",

    "yaml.completion": false,
    "yaml.validate": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.trimAutoWhitespace": true,
    },
    "files.eol": "\n",
    "vs-kubernetes": {
        "vs-kubernetes.minikube-path": "/Users/philipvieira/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
        "vs-kubernetes.minikube-path.mac": "/Users/philipvieira/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
    },
    "[json]": {
        "editor.formatOnSave": true,
    },
    "[plaintext]": {},
